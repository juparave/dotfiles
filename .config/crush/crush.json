{
  "$schema": "https://charm.land/crush.json",
  "lsp": {
    "go": {
      "command": "gopls"
    },
    "typescript": {
      "command": "/Users/pablito/.local/share/nvim/mason/packages/typescript-language-server/node_modules/.bin/typescript-language-server",
      "args": ["--stdio"]
    }
  },
  "mcp": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    }
  },
  "providers": {
    "ollama": {
      "name": "Ollama",
      "base_url": "http://localhost:11434/v1/",
      "type": "openai",
      "api_key": "dummy",
      "models": [
        {
          "name": "OpenAI GPT OSS",
          "id": "gpt-oss:latest",
          "context_window": 128000,
          "default_max_tokens": 20000,
          "can_reason": true
        },
        {
          "name": "Deepseek r1:8b",
          "id": "deepseek-r1:8b",
          "context_window": 128000,
          "default_max_tokens": 20000
        },
        {
          "name": "Qwen3 Coder",
          "id": "qwen3-coder",
          "context_window": 256000,
          "default_max_tokens": 20000
        }
      ]
    }
  }
}
